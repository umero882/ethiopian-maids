{
  "name": "@ethio-maids/i18n",
  "version": "0.1.0",
  "type": "module",
  "description": "Ethiopian Maids i18n - Translation catalogs for English and Arabic",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./en": "./locales/en.json",
    "./ar": "./locales/ar.json"
  },
  "scripts": {
    "check": "node scripts/check-completeness.js",
    "extract": "node scripts/extract-strings.js",
    "stats": "node scripts/show-stats.js",
    "extract:dry": "node scripts/extract-strings.js --dry-run",
    "extract:merge": "node scripts/extract-strings.js --merge"
  },
  "files": [
    "locales",
    "dist"
  ]
}
