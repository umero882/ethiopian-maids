# =============================================================================
# SUPABASE BACKEND CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your Supabase credentials
# Get credentials from: https://app.supabase.com/project/_/settings/api

# Supabase Project Credentials
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_public_key_here
SUPABASE_SERVICE_KEY=your_service_role_key_here

# Database Mode: Switch to Supabase (set to false)
VITE_USE_LOCAL_DATABASE=false

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment settings
NODE_ENV=development
VITE_APP_ENVIRONMENT=development
VITE_APP_NAME=Ethiopian Maids Platform
VITE_APP_VERSION=1.0.0

# Disable mock data when using Supabase
VITE_ENABLE_MOCK_DATA=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
VITE_ENABLE_CHAT=true
VITE_ENABLE_VIDEO_CALLS=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Stripe Payment Integration
VITE_STRIPE_PUBLISHABLE_KEY=

# ElevenLabs Voice Agent (optional - agent ID only, API key is server-side)
VITE_ELEVENLABS_AGENT_ID=
# SECURITY: ELEVENLABS_API_KEY must NOT have VITE_ prefix
# Configure it in Supabase Edge Functions secrets instead

# Google Analytics (disabled for local development)
VITE_GOOGLE_ANALYTICS_ID=

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API timeout and limits
VITE_API_TIMEOUT=30000
VITE_MAX_FILE_SIZE=5242880

# WebSocket/Chat Server URL
VITE_CHAT_SERVER_URL=http://localhost:3001

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
#
# 1. Create a Supabase project at https://supabase.com
# 2. Copy Project URL and anon key from Settings â†’ API
# 3. Replace the placeholder values above
# 4. Set VITE_USE_LOCAL_DATABASE=false
# 5. Run: npm run db:setup
# 6. Run: npm run dev
#
# For detailed instructions, see SUPABASE_INTEGRATION_GUIDE.md
#